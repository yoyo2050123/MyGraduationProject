@model JapaneseLearnSystem.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>會員註冊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Name">姓名</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">電子郵件</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">密碼</label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <label asp-for="Birthday">生日</label>
                    <input asp-for="Birthday" class="form-control" type="date" />
                </div>
                <div class="form-group">
                    <label asp-for="Tel">電話</label>
                    <input asp-for="Tel" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">送出</button>
            </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

