<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 日文學習系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JapaneseLearnSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">返回首頁</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @* 如果使用者擁有管理員角色，顯示管理員後台連結 *@
                        @if (User.IsInRole("管理員"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="MemberManagements" asp-action="Index">管理員後台</a>
                            </li>
                        }
                        @* 如果使用者擁有會員角色，顯示會員專區連結 *@
                        @if (User.IsInRole("一般會員") || User.IsInRole("付費會員"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Members" asp-controller="MemberCenter" asp-action="Index">
                                    會員專區
                                    @* 如果是付費會員，可額外顯示標籤 *@
                                    @if (User.IsInRole("付費會員"))
                                    {
                                        <span class="badge bg-warning text-dark ms-1">付費會員</span>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    @* 這個 Partial 專門負責導覽列右邊的登入區塊 *@
    @* 未登入：顯示「註冊」「登入」；已登入：顯示「你好，用戶名」與「登出」 *@



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - JapaneseLearnSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- 加上這兩行 -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/localization/messages_zh_TW.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
