
@model JapaneseLearnSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "登入";
    string loginMsg = TempData["LoginError"] as string ?? "";
    
}

<h1>登入畫面</h1>
@if (loginMsg != "")
{
    <script>
        alert('@Html.Raw(loginMsg)');
    </script>
}


<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Account">帳號</label>
        <input asp-for="Account" class="form-control"/>
        <span asp-validation-for="Account" class="text-danger"></span>       
    </div>

    <div class="form-group">
        <label asp-for="Password">密碼</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">登入</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
