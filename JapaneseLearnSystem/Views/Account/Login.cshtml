
@model JapaneseLearnSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "登入";
    var loginMsg = TempData["LoginError"] as string;
    var logoutMsg = TempData["LogoutMsg"] as string;

}

<h1>登入畫面</h1>

@if (!string.IsNullOrEmpty(logoutMsg))
{
    <div class="alert alert-success">@logoutMsg</div>
}

@if (!string.IsNullOrEmpty(loginMsg))
{
    <div class="alert alert-danger">@loginMsg</div>
}

    

<form asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Account">帳號</label>
        <input asp-for="Account" class="form-control"/>
        <span asp-validation-for="Account" class="text-danger"></span>       
    </div>

    <div class="form-group">
        <label asp-for="Password">密碼</label>
        <input asp-for="Password" class="form-control" type="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    @Html.HiddenFor(model => model.ReturnUrl)   @* 這裡生成隱藏欄位 *@

    <button type="submit" class="btn btn-primary">登入</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
