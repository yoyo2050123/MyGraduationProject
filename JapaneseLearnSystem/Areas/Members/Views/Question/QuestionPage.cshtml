@model List<JapaneseLearnSystem.Areas.Members.Models.QuestionPage>

@{
    ViewData["Title"] = "練習題";
}

<h2>練習題</h2>

@if (TempData["ResultMessage"] != null)
{
    <div class="alert alert-success">@TempData["ResultMessage"]</div>
}

<form asp-action="QuestionPage" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="question-block mb-3">
            <p><strong>題目 @(i + 1):</strong> @Model[i].QuestionContent</p>

            @for (int j = 0; j < Model[i].Options.Count; j++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio"
                           asp-for="@Model[i].SelectedOptionID"
                           value="@Model[i].Options[j].OptionID"
                           id="q@i-option@j"
                           name="[@i].SelectedOptionID" />

                    <label class="form-check-label" for="q@i-option@j">
                        @Model[i].Options[j].OptionContent
                    </label>
                </div>
            }

            <input type="hidden" asp-for="@Model[i].QuestionInstanceID" />
        </div>
    }

    <button type="submit" class="btn btn-primary">提交答案</button>
</form>
