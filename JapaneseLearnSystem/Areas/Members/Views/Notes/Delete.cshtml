@model JapaneseLearnSystem.Models.NoteViewModel

@{
    ViewData["Title"] = "刪除筆記";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">刪除筆記 😭</h4>
    </div>
    <div class="card-body">
        <p class="text-danger fw-bold">
            你確定要刪除這筆筆記嗎？刪掉後就無法復原囉！
        </p>

        <dl class="row">
            <dt class="col-sm-3">標題</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">原文</dt>
            <dd class="col-sm-9">@Model.OriginalArticle</dd>

            <dt class="col-sm-3">JLPT 等級</dt>
            <dd class="col-sm-9">@Model.JLPTLevelName</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="NoteID" />
            <button type="submit" class="btn btn-danger">
                確認刪除 😭
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">取消</a>
    </div>
</div>
