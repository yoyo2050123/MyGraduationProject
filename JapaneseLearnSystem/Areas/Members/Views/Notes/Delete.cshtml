@model JapaneseLearnSystem.Models.NoteViewModel

@{
    ViewData["Title"] = "Delete Note";
}

<h1>Delete Note</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Original Article</dt>
        <dd class="col-sm-10">@Model.OriginalArticle</dd>

        <dt class="col-sm-2">JLPT Level</dt>
        <dd class="col-sm-10">@Model.JLPTLevelName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="NoteID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
