@model JapaneseLearnSystem.Models.NoteViewModel

@{
    ViewData["Title"] = "Note Details";
}

<div class="note-details-card shadow p-4">
    <h2 class="text-center text-pink mb-4">📒 Note Details</h2>

    <dl class="row">
        <dt class="col-sm-3">🌸 Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">📖 Original</dt>
        <dd class="col-sm-9">@Model.OriginalArticle</dd>

        <dt class="col-sm-3">🔤 Reading</dt>
        <dd class="col-sm-9">@Model.Reading</dd>

        <dt class="col-sm-3">🌐 Translate</dt>
        <dd class="col-sm-9">@Model.Translate</dd>

        <dt class="col-sm-3">🎯 JLPT Level</dt>
        <dd class="col-sm-9">@Model.JLPTLevelName</dd>
    </dl>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.NoteID" class="btn btn-pink me-2">✏️ 編輯</a>
        <a asp-action="Index" class="btn btn-secondary">⬅️ 返回首頁</a>
    </div>
</div>
