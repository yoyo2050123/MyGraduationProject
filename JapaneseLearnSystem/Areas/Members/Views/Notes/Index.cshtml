@model IEnumerable<JapaneseLearnSystem.Models.NoteViewModel>

@{
    ViewData["Title"] = "筆記區";
}

<h1 class="mb-3">筆記區</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div>
        <strong>剩餘可新增筆記數：</strong>
        <span class="text-danger">@ViewBag.NotesRemaining</span>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success">新增筆記</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th>@Html.DisplayNameFor(m => m.OriginalArticle)</th>
            <th>@Html.DisplayNameFor(m => m.Reading)</th>
            <th>@Html.DisplayNameFor(m => m.Translate)</th>
            <th>@Html.DisplayNameFor(m => m.JLPTLevelName)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.OriginalArticle</td>
                <td>@item.Reading</td>
                <td>@item.Translate</td>
                <td>@item.JLPTLevelName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NoteID" class="btn btn-sm btn-warning me-1">編輯</a>
                    <a asp-action="Details" asp-route-id="@item.NoteID" class="btn btn-sm btn-info me-1">詳細</a>
                    <form asp-action="Delete" asp-route-id="@item.NoteID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                    </form>|

                </td>

            </tr>

        }
    </tbody>
</table>
<div class="mt-3">
    <a asp-controller="MemberCenter" asp-action="Index" class="btn btn-secondary">
        返回首頁
    </a>
</div>
