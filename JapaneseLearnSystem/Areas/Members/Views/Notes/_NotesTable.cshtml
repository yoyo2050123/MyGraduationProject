@model JapaneseLearnSystem.Areas.Members.Models.NoteListViewModel

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>標題</th>
            <th>原文</th>
            <th>讀音</th>
            <th>翻譯</th>
            <th>JLPT Level</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model.Notes)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.OriginalArticle</td>
                <td>@note.Reading</td>
                <td>@note.Translate</td>
                <td>@note.JLPTLevelName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@note.NoteID" class="btn btn-sm btn-warning me-1">編輯</a>
                    <a asp-action="Details" asp-route-id="@note.NoteID" class="btn btn-sm btn-info me-1">詳細</a>
                    <a asp-action="Delete" asp-route-id="@note.NoteID" class="btn btn-sm btn-danger me-1">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 d-flex gap-1">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <button class="btn @(i == Model.CurrentPage ? "btn-primary" : "btn-outline-primary") page-btn" data-page="@i">
            @i
        </button>
    }
</div>
