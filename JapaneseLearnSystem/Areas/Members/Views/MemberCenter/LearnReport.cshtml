@model IEnumerable<JapaneseLearnSystem.Models.LearnRecordTable>

@{
    ViewData["Title"] = "我的學習報告";
}

<h2>學習報告（最多顯示 10 筆）</h2>

@if (!Model.Any())
{
    <p>你目前沒有任何學習紀錄。</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>報表名稱</th>
                <th>完成時間</th>
                <th>總題數</th>
                <th>答對題數</th>
                <th>正確率 (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.RecordID</td>
                    <td>@record.AnswerTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@record.TotalAnswers</td>
                    <td>@record.CorrectAnswers</td>                    
                    <td>@record.Accuracy</td>
                </tr>
            }
        </tbody>
    </table>
}
