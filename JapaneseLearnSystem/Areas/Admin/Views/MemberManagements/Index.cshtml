@model IEnumerable<JapaneseLearnSystem.Models.Member>



@{
    ViewData["Title"] = "會員管理";
}

<h1>會員管理</h1>

<p>
    <a asp-area="Admin" asp-controller="MemberManagements" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanID)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="MemberManagements" asp-action="Edit" asp-route-id="@item.MemberID">Edit</a> |
                    <a asp-area="Admin" asp-controller="MemberManagements" asp-action="Details" asp-route-id="@item.MemberID">Details</a> |
                    <a asp-area="Admin" asp-controller="MemberManagements" asp-action="Delete" asp-route-id="@item.MemberID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a asp-action="QuestionCreate" asp-controller="QuestionManagements" asp-area="Admin" class="btn btn-primary">
        前往生成題目
    </a>

</div>
